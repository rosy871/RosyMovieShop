@model IEnumerable<RosyMovieShop.Models.Db.Customer>

<div class="glass">

	<h5> Ours Customers </h5>
</div>
<div class="container">
	<table class="table table-hover table-responsive-sm">
		<thead>
			<tr class="table-dark">
				<th>
					@Html.DisplayNameFor(model => model.FristName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.LastName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>

				<th></th>
			</tr>
		</thead>
		<tbody class="bg-primary-subtle">
				@foreach (var item in Model)
				{
				<tr>
					<td>
							@Html.DisplayFor(modelItem => item.FristName)
					</td>
					<td>
							@Html.DisplayFor(modelItem => item.LastName)
					</td>
					<td>
							@Html.DisplayFor(modelItem => item.Email)
					</td>

					<td>
						<a class="btn btn-outline-primary" asp-action="EditCustomer" asp-route-id="@item.Id">
							<i class="bi bi-pencil-square"></i>
						</a> &emsp;
						<a class="btn btn-outline-info" asp-action="CustomerDetail" asp-route-id="@item.Id">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
								<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
								<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
							</svg>
						</a> &emsp;
						<a class="btn btn-outline-danger" asp-action="DeleteCustomer" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i> </a>
					</td>
				</tr>
				}
		</tbody>
	</table>

</div>

