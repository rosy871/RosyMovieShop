@model IEnumerable<RosyMovieShop.Models.Db.Movie>

@{
    ViewData["Title"] = "Display All Movies";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div class="container-fluid mb-3 text-center">

    <div class="row mt-2">
        <div class="glass">
            <h2>ALL MOVIES</h2>
        </div>

        @foreach (var movie in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 me-4 mb-4">

                <partial name="_MovieCardPartial" model="movie"></partial>

            </div>


        }

    </div>

</div>
